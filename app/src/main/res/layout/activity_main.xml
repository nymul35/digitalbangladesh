<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"


        >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/digban"
        android:padding="5dp"

        >



    </ImageView>

    <Button
        android:id="@+id/btndigi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="what_is_digital_bangladesh?"
        android:textSize="17sp"
        android:backgroundTint="#FA8072"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:padding="5dp"
        >


    </Button>

    <Button
        android:id="@+id/btndigi2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How many issues the government has given importance to the implementation of Digital Bangladesh ?"
        android:textSize="17sp"
        android:backgroundTint="#000000"
        android:textAlignment="center"
        android:padding="5dp"
        android:layout_gravity="center"

        >


    </Button>


    <Button
        android:id="@+id/btndigi3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Does e governance possible in Bangladesh?"
        android:textSize="17sp"
        android:backgroundTint="#000000"
        android:padding="5dp"
        android:layout_gravity="center"
        >


    </Button>

    <Button
        android:id="@+id/btndigi4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which is the first WIFI city in Bangladesh?"
        android:textSize="17sp"
        android:backgroundTint="#000000"
        android:padding="5dp"
        android:layout_gravity="center"
        >


    </Button>

    <Button
        android:id="@+id/btndigi5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Is vision a Bangladeshi brand?"
        android:textSize="17sp"
        android:backgroundTint="#000000"
        android:padding="5dp"
        android:layout_gravity="center"
        >


    </Button>

    </LinearLayout>

</ScrollView>